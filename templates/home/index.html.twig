{% extends 'base.html.twig' %}

{% block body %}
<style>
.card-img-top {
    width: 100%;
    height: 16vw;
    
}
</style>
<div class="container">
    <h3 class="mt-3 mb-4"> <i class="fa fa-bookmark" aria-hidden="true"></i>  Books</h3>
    <div class="row">
        {% for book in books %}
            <div class="col-md-2">
                <div class="card mb-6">
                    <img class="card-img-top" src="{{ book.image }}" alt="{{ book.title }}" class="card-img-top">
                    
					<div class="card-text">

                                               <span style="
  display:inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 18ch; class="h6 mt-auto">&nbsp;{{ book.title }}</span>

                    </div>
					<div class="card-footer">
    <span class="h6 mt-auto">{{ book.price }} â‚¬</span>&nbsp;&nbsp;&nbsp;&nbsp; <a  href="{{ path('book.detail', {id: book.id}) }}"><i style="margin-left:40px;" class="fa fa-shopping-cart" aria-hidden="true"></a></i>
 </a>
  </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}