{# templates/registration/index.html.twig #} {% extends 'base.html.twig' %} {%
block body %}
<div class="container">
  <div class="row">
    <div class="col-md-10 ml-md-auto">
      <div class="card bg-light mb-3 mt-5" style="width: 800px">
	             <br> <center> <h4>Weclome to <b> Bookstore </b> </h4></center><br>
        <div class="card-body">
          <div class="card-header mb-3"><h6>Please fill-in your credentials carefully</h6></div>
          {{ form_start(form) }}
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.password.first, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.password.second, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
		    <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.location, {'attr': {'class': 'form-control'}}) }}
            </div>
		  <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
              <center><div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
            <button  style="width: 160px;" type="submit" class="btn btn-warning">
                <i class="fa fa-btn fa-user"></i> &nbsp; Sign Up
              </button>
            </div></center>

          </div>
		  						              <center> <h6>You already have an account? <b> <a href="{{ path('app_login') }}">Sign In now</a> </b> </h4></center><br>

          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}